@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.2.1.min.js"></script>
<script>
    function newPassClick() {
        var username = document.getElementById("username").value;
        var oldPass = document.getElementById("oldPass").value;
        var newPass = document.getElementById("newPass").value;
        $.get("/Account/ChangePasswordAction?username=" + username + "&oldPass=" + oldPass + "&newPass=" + newPass, function (data) {
            if (data == "True") {
                alert("Password changed");
            }
            else {
                alert("Password was not changed");
            }
        })
    }
</script>

<input id="username" type="text" />
<input id="oldPass" type="text" />
<input id="newPass" type="text" />
<button id="sumbitPass" onclick="newPassClick()">Change Password</button>


